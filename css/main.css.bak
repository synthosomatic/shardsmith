@font-face {

	font-family: "Eorzea";
	src: url('/fonts/Eorzea.ttf');

}
	
a {

	color: #fff;
	text-decoration: none;
	
}
	
head {

}
	
body {

	background: #100C14 url("/images/dragonskin.png") repeat fixed;
	font-family: 'Open Sans Light', sans-serif;
	text-align: center;
	position: relative;
	z-index: 0;
	
}

header {

	position: fixed;
	z-index: 10;
	top: 0px;
	box-shadow: 0 5px 20px #000;
	background: url("/images/logo.png") 20px no-repeat, linear-gradient(rgba(0,0,0,0), rgba(29,27,34,1)), linear-gradient(to right, #1D1B22, #413F52, #1D1B22);
	border: 3px solid transparent;
	border-image: linear-gradient(to right, #31303E, #BAAA78, #463E3A);
	border-image-slice: 1;
	border-left: 0px solid #000;
	border-right: 0px solid #000;
	color: #9C9ACF;
	text-shadow: 0 0 2px #000, 0 0 25px #0000FF, 0 0 5px #2A2952;
	width: 100%;
	visibility: hidden;

	span {

		line-height: 40px;

		a {

			color: #9C9ACF;
			text-shadow: 0 0 2px #000, 0 0 25px #0000FF, 0 0 5px #2A2952;

		}

	}

}

main {

}

nav {

		background: #17131C;
		border-right: 2px solid #2B2924;
		position: fixed;
		z-index: 3;
		left: 0px;
		height: 100%;
		
		span {
			
			display: flex;
			flex-direction: column;
			justify-content: center;
			height: inherit;
			
		}
		
		a {

			color: #9C9ACF;
			text-shadow: 0 0 2px #000, 0 0 25px #0000FF, 0 0 5px #2A2952;
	
		}

}

content {

	color: #fff;
	
}
	
section {

	&#content {

		display: flex;
		justify-content: center;
		
		a {

		}
		
	}
		
}

ul {

	&.jobs {

		background: #100C14;
		border: 2px solid #2B2237;
		border-right: none;
		border-spacing: 5px;
		display: table;
		font-size: .75em;

		&:last-child {

			border-right: 2px solid #2B2237;

		}
		
	}
	
	&.hide {

/*		display: none; */

	}
	
	&#materials {
	
		input {
		
			width: 80px;
			
		}
	
	}

}	

li {

	display: table-row;
	border-collapse: collapse;

	span {

		display: table-cell;
		border: 1px solid #2B2237;
		background: #777;
		
		a {

		}

	}

	&.level_range {

		background: linear-gradient(to right, #100C14, #4A3F73, #100C14);
	
	}
	
	&.complete {
		
		background-color: green;
		
	}
	
}

footer {

	position: fixed;
	z-index: 10;
	bottom: 0px;
	box-shadow: 0 -2px 15px #000;
	background: linear-gradient(rgba(0,0,0,0), rgba(29,27,34,1)), linear-gradient(to right, #1D1B22, #413F52, #1D1B22);
	border: 3px solid transparent;
	border-image: linear-gradient(to right, #31303E, #BAAA78, #463E3A);
	border-image-slice: 1;
	border-left: 0px solid #000;
	border-right: 0px solid #000;
	color: #9C9ACF;
	text-shadow: 0 0 2px #000, 0 0 25px #0000FF, 0 0 5px #2A2952;
	width: 100%;
	visibility: hidden;

	span {

		line-height: 40px;

		a {

			color: #9C9ACF;
			text-shadow: 0 0 2px #000, 0 0 25px #0000FF, 0 0 5px #2A2952;

		}

	}
	
}